FROM postgres:9.4
MAINTAINER Luiz Amorim <luiz.simples@gmail.com>

ENV DEBIAN_FRONTEND noninteractive

### Set timezone to America/Sao_Paulo
RUN echo "America/Sao_Paulo" > /etc/timezone && dpkg-reconfigure -f noninteractive tzdata

RUN apt-get update && apt-get upgrade -qqy --force-yes && apt-get autoremove -qqy --force-yes && apt-get autoclean -qqy --force-yes && apt-get clean

ENTRYPOINT ["/docker-entrypoint.sh"]

EXPOSE 5432

CMD ["postgres"]
