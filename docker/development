FROM debian:jessie
MAINTAINER Luiz Amorim <luiz.simples@gmail.com>

ENV DEBIAN_FRONTEND noninteractive

### Autocomplete in shell
RUN echo "" >> /etc/bash.bashrc
RUN echo "# enable bash completion in interactive shells" >> /etc/bash.bashrc
RUN echo "if ! shopt -oq posix; then" >> /etc/bash.bashrc
RUN echo "  if [ -f /usr/share/bash-completion/bash_completion ]; then" >> /etc/bash.bashrc
RUN echo "    . /usr/share/bash-completion/bash_completion" >> /etc/bash.bashrc
RUN echo "  elif [ -f /etc/bash_completion ]; then" >> /etc/bash.bashrc
RUN echo "    . /etc/bash_completion" >> /etc/bash.bashrc
RUN echo "  fi" >> /etc/bash.bashrc
RUN echo "fi" >> /etc/bash.bashrc
RUN echo "" >> /etc/bash.bashrc

### Set timezone to America/Sao_Paulo
RUN echo "America/Sao_Paulo" > /etc/timezone && dpkg-reconfigure -f noninteractive tzdata

### Update debian:jessie & Install dev tools
RUN apt-get update && apt-get upgrade -qqy --force-yes && apt-get install -qqy --force-yes apt-utils htop locales sudo libfontconfig1 bzip2 tar build-essential python-software-properties vim git curl gzip

### Set UTF-8 with pt_BR
RUN echo "LANGUAGE=pt_BR.UTF-8" >> /etc/environment && echo "LANG=pt_BR.UTF-8" >> /etc/environment && echo "LC_ALL=pt_BR.UTF-8" >> /etc/environment && locale-gen pt_BR.UTF-8 && dpkg-reconfigure locales

# gpg keys listed at https://github.com/nodejs/node
RUN set -ex \
  && for key in \
    9554F04D7259F04124DE6B476D5A82AC7E37093B \
    94AE36675C464D64BAFA68DD7434390BDBE9B9C5 \
    0034A06D9D9B0064CE8ADF6BF1747F4AD2306D93 \
    FD3A5288F042B6850C66B31F09FE44734EB7990E \
    71DCFD284A79C3B38668286BC97EC7A07EDE3FC1 \
    DD8F2338BAE7501E3DD5AC78C273792F7D83545D \
  ; do \
    gpg --keyserver ha.pool.sks-keyservers.net --recv-keys "$key"; \
  done

#NodeJS v4.2.4 - Long Term Support Release
ENV NODE_VERSION 4.2.4

RUN curl -SLO "https://nodejs.org/dist/v$NODE_VERSION/node-v$NODE_VERSION-linux-x64.tar.gz" \
  && curl -SLO "https://nodejs.org/dist/v$NODE_VERSION/SHASUMS256.txt.asc" \
  && gpg --verify SHASUMS256.txt.asc \
  && grep " node-v$NODE_VERSION-linux-x64.tar.gz\$" SHASUMS256.txt.asc | sha256sum -c - \
  && tar -xzf "node-v$NODE_VERSION-linux-x64.tar.gz" -C /usr/local --strip-components=1 \
  && rm "node-v$NODE_VERSION-linux-x64.tar.gz" SHASUMS256.txt.asc

### apt-get clean
RUN apt-get autoremove -qqy --force-yes && apt-get autoclean -qqy --force-yes && apt-get clean && apt-get update

ENV NODE_ENV development

### Update NPM && install globals dependencies of npm
RUN npm update -g
RUN npm install -g gulp bower yo
RUN npm install -g generator-gulp-angular
RUN npm install -g jest mocha

### Add user in debian:jessie, Username: "mBoard" & folderHome: /mBoard
RUN echo "%sudo ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers && \
    useradd -u 5001 -G users,sudo -d /mBoard --shell /bin/bash -m mBoard && \
    echo "secret\nsecret" | passwd mBoard

### Set PID of user
RUN usermod -u 1000 mBoard

### Set default user
USER mBoard

### Set default folder to user folder
WORKDIR /mBoard

CMD [ "bash" ]
